<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainStage" prefHeight="600" prefWidth="700.0" styleClass="borderpane" stylesheets="@FitspoApp.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt4140.gr1806.app.ui.GoalViewController">
   <top>
      <Label text="FitsPo" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial" size="50.0" />
         </font></Label>
   </top>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
      	<children>
        		<fx:include fx:id="menuBar" source="Menu.fxml" />
   		</children>
      </VBox>
   </left>
   <center>
      <VBox fx:id="messageContent" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="customerComboBox" prefHeight="27.0" prefWidth="567.0" promptText=" Choose Customer" />
            <ScrollPane fx:id="messageBox" prefHeight="171.0" prefWidth="567.0" />
            <VBox prefHeight="23.0" prefWidth="567.0">
               <children>
                  <Label alignment="CENTER" prefHeight="23.0" prefWidth="217.0" text="Please enter the new step goal:" />
               </children>
            </VBox>
            <TextField fx:id="stepsField" alignment="CENTER" prefHeight="43.0" prefWidth="567.0" promptText="0" />
            <VBox prefHeight="25.0" prefWidth="567.0">
               <children>
                  <Label alignment="CENTER" prefHeight="25.0" prefWidth="313.0" text="Please enter the deadline date: (YYYY-MM-DD)" />
               </children>
            </VBox>
            <TextField fx:id="dateField" alignment="CENTER" prefHeight="43.0" prefWidth="567.0" promptText="YYYY-MM-DD" />
            <Button fx:id="updateGoalBtn" mnemonicParsing="false" onAction="#updateGoal" prefHeight="27.0" prefWidth="567.0" text="Update goal" />
            <VBox prefHeight="13.0" prefWidth="567.0" />
            <Button fx:id="clearMessageBtn" mnemonicParsing="false" onAction="#clearMessage" prefHeight="27.0" prefWidth="567.0" text="Clear fields" />
         </children>
      </VBox>
   </center>
</BorderPane>
